.backdrop{
  background-image: url(<%= asset_path 'background.png' %>);
  background-position: center center; 
  background-size: cover; 
}

.home_container {
  display: grid;
  place-items: center;
  height: 100vh;
  font-family: 'Bebas Neue', sans-serif;
}

.title_container {
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  font-size: 30px;
}

.button_container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.signup_btn {
  margin-top: 15px;
  display: inline-block;
  padding: 15px 30px;
  font-size: 24px;
  background-color: black;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  text-align: center;
  text-decoration: none;
  transition: background-color 0.3s ease;
  box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);
}

.signup_btn:hover {
  background-color: #ffc107;
  color: #8a2be2;
}
