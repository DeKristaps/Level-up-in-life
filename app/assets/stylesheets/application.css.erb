  text-align: center;
}

.stats-frame {
  background-color: rgba(10, 10, 10, 0.5); 
  border-radius: 10px; 
  box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.5);
  padding: 15px;
  margin: 7px;
}

.stats-container {
  color: white;
  display: flex;
  flex-direction: column;
  font-size: 30px;
}

.stat-window {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.quest-card {
  background-color: rgba(10, 10, 10, 0.5); /* Adjusted background color */
  border: 1px solid white; /* White border */
  border-radius: 10px;
  padding: 15px;
  margin: 10px;
  transition: transform 0.3s ease-in-out;
  text-decoration: none;
  color: white;
  user-select: none;
}

.quest-card:hover {
  transform: scale(1.05);
}

.card-content {
