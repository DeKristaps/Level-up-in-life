<div class="quest-card">
  <%= link_to quest_path(quest) do %>
    <div class="card-content">
      <h3 class="card-title"><%= quest.title %></h3>
      <p class="card-description"><%= quest.description %></p>
      <p class="card-xp">XP Given: <%= quest.xp_given %></p>
      <p class="card-xp-for-stat">XP For Stat: <%= quest.xp_for_stat %></p>
    </div>
  <% end %>
</div>