<div class='profile-container'>
  <div class='quest-frame'>
    Quest Placeholder
  </div>
  <div class='profile-info-container'>
    <div class='profile-frame'>
      <div class='name-container'>
        <h1><%= @user.nickname %></h1>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: 'signup_btn' %>
      </div>
    </div>
    <div>
    </div>
    <div class='stats-frame'>
      <div class='stats-container'>
        <% @stats.each do |stat, value| %>
          <div class='stat-window'>
            <div><%= stat.capitalize %></div>
            <div><%= value %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>